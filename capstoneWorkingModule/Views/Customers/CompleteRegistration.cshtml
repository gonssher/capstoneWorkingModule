@model CapstoneProj.Models.Customer

@{
    ViewData["Title"] = "CompleteRegistration";
}

<h1>Registration Completion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Customers" asp-action="CompleteRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustId" />
            <h4>@Model.CustName</h4>
            <h4>Form Policy</h4>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
